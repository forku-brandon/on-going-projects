
<MyLayout>
    BoxLayout:
        size: root.width,root.height
        orientation: 'vertical'
        TextInput:
            multiline:False
            id: update_label
            text: '0'
            font_size:40
            halign:'right'
        
        GridLayout:
            cols:4
            rows:5
            Button:
                text: 'AC'
                font_size:30
                on_press:root.delete()
                background_color: (1,0,0,1)
            Button:        
                text: '( '
                font_size:30
                on_press:root.press('( ')
                background_color: (1,0,1,1)
            Button:
                text: ')'
                font_size:30
                on_press:root.math_sign(')')
                background_color: (1,0,1,1)
            Button:
                text: '/'
                font_size:30
                on_press:root.math_sign('/')
                background_color: (1,0,1,1)
            Button:
                text: '7'
                font_size:30
                on_press:root.press(7)
            Button:
                text: '8'
                font_size:30
                on_press:root.press(8)
            Button:
                text: '9'
                font_size:30
                on_press:root.press(9)
            Button:
                text: 'x'
                font_size:30
                on_press:root.math_sign('*')
                background_color: (1,0,1,1)
            Button:
                text: '4'
                font_size:30
                on_press:root.press(4)
            Button:
                text: '5'
                font_size:30
                on_press:root.press(5)
            Button:
                text: '6'
                font_size:30
                on_press:root.press(6)
            Button:        
                text: '-'
                font_size:30
                on_press:root.math_sign('-')
                background_color: (1,0,1,1)
            Button:
                text: '1'
                font_size:30
                on_press:root.press(1)
            Button:
                text: '2'
                font_size:30
                on_press:root.press(2)
            Button:
                text: '3'
                font_size:30
                on_press:root.press(3)
            Button:
                text: '+'
                font_size:30
                on_press:root.math_sign('+')
                background_color: (1,0,1,1)
            Button:
                text: '0'
                font_size:30
                on_press:root.press(0)
            Button:
                text: '.'
                font_size:30
                on_press:root.dot()
                background_color: (1,0,1,1)
            Button:
                on_press:root.press()
                text: '%'
                font_size:30
                on_press:root.math_sign('%')
                background_color: (1,0,1,1)
            Button:
                text: '='
                font_size:30
                on_press:root.equal()
                background_color: (1,0,0,1)

             
        
       
        

            

    
          


   

    
        